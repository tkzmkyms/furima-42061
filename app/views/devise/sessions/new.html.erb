<h2>ログイン</h2>

<%# --- Deviseのエラーメッセージ表示（メールアドレスやパスワードの間違い）--- %>
<% if flash[:alert] %>
  <div id="flash_alert">
    <p><%= flash[:alert] %></p>
  </div>
<% end %>

<%# --- エラーメッセージ表示 --- %>
<% if resource.errors.any? %>
  <div id="error_explanation">
    <% resource.errors.full_messages.uniq.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: f.object.email %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログイン状態を保持する" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

